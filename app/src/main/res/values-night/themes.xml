<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VPortal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Login" parent="Theme.VPortal">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Home" parent="Theme.VPortal">
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>
    </style>

    <style name="Theme.VPortal.Fullscreen" parent="Theme.VPortal">
        <item name="android:actionBarStyle">@style/Widget.Theme.VPortal.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.VPortals.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <declare-styleable name="NKOtpView">
        <attr format="integer" name="itemCount"/>
        <attr format="integer" name="lineEndColor"/>
        <attr format="integer" name="lineStartColor"/>
        <attr format="integer" name="dashColor"/>
        <attr format="integer" name="lineCount"/>
        <attr format="float" name="dashLength"/>
        <attr format="float" name="spaceLength"/>
        <attr format="boolean" name="showDash"/>
        <attr format="integer" name="textFColor"/>
    </declare-styleable>
</resources>