<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/startv_bottom"
    tools:context=".home.BallotOtpActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg">

        <RelativeLayout
            android:id="@+id/rlview"
            android:layout_width="match_parent"
            android:layout_height="733dp"
            android:background="@color/home_bg"
            android:foregroundGravity="fill_horizontal">

            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:elevation="4dp"
                android:background="@color/white"
                android:foregroundGravity="top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivulogo"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivulogo"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/line" />

                <TextView
                    android:id="@+id/titlemorning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivline"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:text="Annual Election of Directors"
                    android:textColor="@color/edit_text_heading"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/titledate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titlemorning"
                    android:gravity="center"
                    android:text="Closes: 2/28/2020"
                    android:textColor="@color/home_title"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tbottomBar"
                android:layout_below="@id/topBar"
                android:background="@drawable/sv_bg">

                <TextView
                    android:id="@+id/ltitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:text="1- To vote for a candidate, please place a check mark in the box next to the candidateâ€™s name you desire to vote for."
                    android:textColor="@color/edit_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ltitletwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ltitle"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:text="2 You may vote for a maximum of one (1) candidate(s)."
                    android:textColor="@color/edit_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ltitlethree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ltitletwo"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:text="3- You may vote for less than one (1) candidate(s), if you so choose."
                    android:textColor="@color/edit_text"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tbottomBar"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_alignParentBottom="true"
                android:background="@color/startv_bottom">

                <Button
                    android:id="@+id/startBtn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginRight="43dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/start_voting"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="@color/button_bg" />

                <TextView
                    android:id="@+id/tvbtnstv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startBtn"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_horizontal"
                    android:text="Dated this 31th day of July, 2020"
                    android:textColor="@color/edit_text"
                    android:textSize="12sp" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>